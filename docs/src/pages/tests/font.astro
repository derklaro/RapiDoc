---
import ExampleLayout from '../../layouts/ExampleLayout.astro';
---
<ExampleLayout>
  <rapi-doc id = "thedoc" spec-url = "/specs/petstore.yaml" regular-font="Open Sans'"  mono-font="Sono" render-style="read"> 

    <div class="control-panel" slot="custom-header">
      <button class='btn' onclick="changeFont('regular-font')">Change Regular Font</button>
      <button class='btn' onclick="changeFont('mono-font')">Change Mono Font</button>
      <span class="green" style="margin-left:36px"> Font Sizes:</span>
      <button class='btn' onclick="changeFontSize('default')">Default</button>
      <button class='btn' onclick="changeFontSize('large')">Large</button>
      <button class='btn' onclick="changeFontSize('largest')">Largest</button>
      <div style="flex:1"></div>
      <button class='btn yellow' onclick="toggleRenderStyle()">Toggle Render Style</button>
    </div>

  </rapi-doc>
</ExampleLayout>


<script is:inline>
  function changeFont(fontType) {
    if (fontType == 'regular-font') {
      if (rapidocEl.getAttribute('regular-font') === "'Open Sans'") {
        rapidocEl.setAttribute('regular-font', 'Nunito');
      } else {
        rapidocEl.setAttribute('regular-font', "'Open Sans'");
      }
    } else {
      if (rapidocEl.getAttribute('mono-font') === "'Roboto Mono'") {
        rapidocEl.setAttribute('mono-font', "Sono");
      } else {
        rapidocEl.setAttribute('mono-font', "'Roboto Mono'");
      }
    }
  }

  function changeFontSize(fontSize ) {
    rapidocEl.setAttribute('font-size', fontSize);
  }
</script>

