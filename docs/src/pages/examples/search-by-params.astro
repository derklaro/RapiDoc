---
import ExampleLayout from '../../layouts/ExampleLayout.astro';
import { getSpecUrl } from '../../utils/getSpecUrl';

const specUrl = getSpecUrl(Astro.url);
---

<ExampleLayout>
  <rapi-doc 
    id = "thedoc"
    spec-url = "/specs/petstore.yaml"
    show-info = "true"
    show-header= "true"
    allow-advanced-search= "true"
    allow-try = "false"
    use-path-in-nav-bar = "true"
  > 

    <div slot="nav-logo" style="display:flex; flex-direction:row; align-items:center; gap:5px">
      <span class="green">Search:</span>
      <button class='btn' onclick="onSearchChange('none')" >None</button>
      <button class='btn' onclick="onSearchChange('quick')" >Filter</button>
      <button class='btn' onclick="onSearchChange('advanced')" >Search</button>
    </div>

  </rapi-doc>
</ExampleLayout>


<script is:inline>
  function onSearchChange(option){
    const docEl = document.getElementById('thedoc');
    if (option === 'advanced') {
      docEl.setAttribute('allow-search', 'false');
      docEl.setAttribute('allow-advanced-search', 'true');
    } else if (option==='quick'){
      docEl.setAttribute('allow-search', 'true');
      docEl.setAttribute('allow-advanced-search', 'false');
    } else if (option === 'none') {
      docEl.setAttribute('allow-search', 'false');
      docEl.setAttribute('allow-advanced-search', 'false');
    }
  }
</script>
