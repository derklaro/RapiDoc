---
import ExampleLayout from '../../layouts/ExampleLayout.astro';
---

<ExampleLayout>
  <rapi-doc spec-url="../specs/mock.yaml"
    id = "thedoc"
    show-header = "false"
    show-info = "true"
    allow-server-selection = "true"
    allow-authentication = "false"
    render-style = "read"
  > 
    <div slot="nav-logo" style="display:flex; justify-content:center;">
      <button class='btn' style="width:150px" onclick="toggleAllowTry()">Toggle Allow Try</button>
    </div>
  </rapi-doc>

</ExampleLayout>

<script is:inline>
  function getRapiDoc() {
    return document.getElementById("thedoc");
  }
  
  function toggleAllowTry () {
    if (getRapiDoc().getAttribute('allow-try') === 'false' ) {
      getRapiDoc().setAttribute('allow-try', 'true');
    } else {
      getRapiDoc().setAttribute('allow-try', 'false');
    }
  }
</script>
