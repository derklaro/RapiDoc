---
import ExampleLayout from '../../layouts/ExampleLayout.astro';
const fillData = 'The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog.';
---

<ExampleLayout>
  <div style="height:100px; padding:16px; font-family:'Open Sans'; font-weight:400">
    <h1 style="font-weight:300">The quick brown fox jumps over the lazy dog.</h1>
    <h3>${fillData}</h3>
  </div>
  <div style="height:450px; display:flex; font-family:'Open Sans'; font-weight:300">
    <div style="width:270px; padding:0 16px 16px 16px">
      <p>${fillData}</p>
      <p>${fillData}</p>
      <p>${fillData}</p>
      <p>${fillData}</p>
    </div>
    <rapi-doc style="flex:1; margin:36px 36px 20px 36px; border:4px solid #ccc;border-radius:4px;" 
      sspec-url="../specs/petstore-mini.yaml" 
      show-header='false'
      show-info='false'
      allow-authentication = 'false'
      allow-server-selection = 'false'
      theme='dark' 
      layout="column"
    > 
    </rapi-doc>
  </div>
</ExampleLayout>