---
import ExampleLayout from '../../layouts/ExampleLayout.astro';
const fillData = 'The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog.';
---

<ExampleLayout>
  <div style="height:100px; margin:32px;">
    <h1>The quick brown fox jumps over the lazy dog.</h1>
    <h3>{fillData}</h3>
  </div>
  <div style="flex:1; height:calc(100vh - 200px); display:flex; gap:32px; font-weight:300;margin:0 32px;">
    <div style="width:270px;">
      <p>{fillData}</p>
      <p>{fillData}</p>
      <p>{fillData}</p>
      <p>{fillData}</p>
    </div>
    <rapi-doc style="flex:1; border:4px solid #aaa;border-radius:4px;" 
      spec-url="/specs/petstore.yaml" 
      show-header='false'
      show-info='false'
      allow-authentication = 'false'
      allow-server-selection = 'false'
      theme='dark' 
      layout="column"
    > 
    </rapi-doc>
  </div>
</ExampleLayout>