---
import GlobalLayout from '../layouts/GlobalLayout.astro';
import TopBar from '../components/TopBar.astro';
---

<GlobalLayout>
  <div class="card-container">
    <div class="card">
        <div class="card-content">
            <h3>Card 1</h3>
            <p>This is the content of the first card.</p>
        </div>
    </div>
    <div class="card">
        <div class="card-content">
            <h3>Card 2</h3>
            <p>This is the content of the second card.</p>
        </div>
    </div>
    <div class="card">
        <div class="card-content">
            <h3>Card 3</h3>
            <p>This is the content of the third card.</p>
        </div>
    </div>
</div>
</GlobalLayout>

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #121212;
}

.card-container {
    display: flex;
    gap: 20px;
}

.card {
    position: relative;
    width: 200px;
    height: 250px;
    background: #1c1c1c;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
}

.card-content {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: #1c1c1c;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    text-align: center;
    padding: 20px;
}

/* Glowing Border Effect on Hover */
.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    padding: 2px;
    background: linear-gradient(90deg, #ff00ff, #00ffff, #ff00ff, #00ffff);
    background-size: 400% 400%;
    opacity: 0;
    transition: opacity 0.3s ease;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
}

/* Trigger the glowing animation on hover */
.card:hover::before {
    opacity: 1;
    animation: glowing-border 3s linear infinite;
}

/* Animation for glowing and rotating border */
@keyframes glowing-border {
    0% {
        background-position: 0% 50%;
    }
    100% {
        background-position: 100% 50%;
    }
}

.card h3 {
    margin-bottom: 10px;
    font-size: 1.2em;
}

.card p {
    font-size: 0.9em;
}
</style>