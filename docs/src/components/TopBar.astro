---
interface Props {
  page: 'home' | 'examples' | 'api' | 'quickstart' | 'example-list' | 'other'; 
  showWaves?: boolean;
  height?:number
  hiddenOverflow?: boolean
}

// Destructure the props using the defined interface
const { page, height, showWaves = false, hiddenOverflow = true } = Astro.props;
---

<div  class="banner" style={`max-height:${page === 'home' ? '500':'400'}px; overflow:${hiddenOverflow ? 'hidden' :'visible'}`} >
  <div class="topbar" style= {height != undefined ? `height: ${height}px;` : undefined}>
    <div class="header">
      <a class="menu-item" data-action="url" href="./index.html">
        <img class="logo" src="./assets/images/logo.png" style="width:36px;height:36px;margin-right:10px;" href="./index.html"/>
      </a>
      <div class="product-name">RapiDoc</div>
      <div class="menu" style="flex:1"></div>
      <nav class="menu">
        { page !== 'home' && <a class="menu-item" href="./index.html"> Home </a> }
        { page !== 'quickstart' && <a class="menu-item" href="./quickstart.html"> Quick Start </a> }
        { page !== 'examples' && <a class="menu-item" href="./examples.html"> Examples </a> }
        { page !== 'api' && <a class="menu-item" href="./api.html"> API </a> }
        <a class="menu-item hide-in-mobile" data-action="url" href="https://github.com/rapi-doc/RapiDoc"> GitHub </a>
      </nav>
    </div>
  </div>
  <slot/>
  {showWaves && (
    <!--Waves Container-->
    <div>
      <svg class="waves" xmlns="http://www.w3.org/2000/svg" viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
        <defs>
          <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
        </defs>
        <g class="parallax">
          <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.2" />
          <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
          <use xlink:href="#gentle-wave" x="48" y="7" fill="var(--bg-color)" />
        </g>
      </svg>
    </div>
    <!--Waves end-->
  )}
</div>

<style>
.banner {
  position:relative;
  text-align:center;
  background: linear-gradient(60deg, rgba(84,58,183,1) 0%, rgba(0,172,193,1) 100%);
  color: var(--banner-text-color);
}
.product-name {
  font-weight: 300;
  font-size: 32px;
  line-height: 40px;
  color: var(--banner-text-color);
}
.banner-content{
  font-weight: 300;
}
.banner-title {
  font-size: 38px;
  line-height: 48px;
}
.header {
  display: flex;
  align-items: center;
  height: 60px;
  justify-content: center;
}

.topbar{
  padding: 6px 24px;
}
.waves {
  position:relative;
  width: 100%;
  height:15vh;
  margin-bottom:-7px; /*Fix for safari gap*/
  min-height:100px;
  max-height:150px;
}
.header {
  display: flex;
  align-items: center;
  height: 60px;
  justify-content: center;
}


.parallax {
  & > use {
    animation: animate-wave 25s cubic-bezier(.55,.5,.45,.5) 120s;
  }
  & > use:nth-child(1) {
    animation-delay: -2s;
    animation-duration: 45s;
  }
  & > use:nth-child(2) {
    animation-delay: -3s;
    animation-duration: 55s;
  }
  & > use:nth-child(3) {
    animation-delay: -4s;
    animation-duration: 65s;
  }
}
@keyframes animate-wave {
  0% {
    transform: translate3d(-90px,0,0);
  }
  100% { 
    transform: translate3d(85px,0,0);
  }
}
</style>